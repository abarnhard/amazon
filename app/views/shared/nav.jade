.navbar.navbar-default(role='navigation')
  .container-fluid
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Amazon

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if user
          li: a(href='/products') Shop
          li: a(href='/cart') Cart
          li: a.fa.fa-space-shuttle(href='/profile') &nbsp; Profile
          li
            form.navbar-form(method='post', action='/logout')
              .form-group
                input(type='hidden', name='_method', value='delete')
                button.btn.btn-danger= user.email || user.username || user.displayName
        else
          li: a.fa.fa-user(href='/register')
          li: a.fa.fa-rocket(href='/login')
          li: a.fa.fa-twitter(href='/auth/twitter')
          li: a.fa.fa-github(href='/auth/github')
          li: a.fa.fa-google(href='/auth/google')
          li: a.fa.fa-facebook(href='/auth/facebook')
          li: a.fa.fa-meetup(href='/auth/meetup')

