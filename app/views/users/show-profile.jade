extends ../shared/template
block content
  h2 Profile
  .panel.panel-default
    .panel-body
      .row
        .col-xs-6
          h3= user.name
        .col-xs-6
          h5
            a(href='/profile/edit')
              span.fa.fa-flask &nbsp;
              span Update Profile
      .row
        .col-xs-6
          table.table.table-bordered
            tbody
              tr
                td Email
                td= user.email
              tr
                td Age
                td= user.age
        .col-xs-6
          .row
            .col-xs-12
              if user.photo
                .photo.img-circle(style='background-image:url(#{user.photo});')

block scripts

